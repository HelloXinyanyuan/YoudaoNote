<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowNoTitle">true</item>
    </style>
        
    <style name="HomeTabTxtStyle" >
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/docker_tab_text_color_selector</item>
    </style>
    
    <style name="NoteTabTxtStyle" parent="@style/HomeTabTxtStyle">
        <item name="android:textColor">@color/note_tab_text_color_selector</item>
        <item name="android:textSize">18sp</item>
    </style>
    
    <style name="list_more_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textColor">#d6d6d6</item>
        <item name="android:textSize">16sp</item>
        <item name="android:drawablePadding">8dp</item>
    </style>
    
     <style name="list_more_item_divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:layout_marginTop">-1px</item>
        <item name="android:background">#222425</item>
    </style>
                
     <style name="setting_item_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:background">@drawable/setting_item_selector</item>
    </style>
     <style name="setting_item_divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:layout_marginTop">-1px</item>
        <item name="android:background">#cccccc</item>
    </style>
       
     <style name="setting_item_arrow">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:src">@drawable/arrow_right</item>
        <item name="android:layout_marginRight">@dimen/activity_horizontal_margin</item>
    </style>
            
     <style name="setting_item_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#292929</item>
        <item name="android:textSize">16sp</item>
    </style>
    
</resources>
